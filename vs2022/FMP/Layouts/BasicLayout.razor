@namespace XTC.FMP.APP.Blazor
@inherits LayoutComponentBase

<AntDesign.ProLayout.BasicLayout Logo="@("https://gw.alipayobjects.com/zos/rmsportal/KDpgvguMpGfqaHPjicRK.svg")"
                                 MenuData="menuData_">
    <RightContentRender>
        <XTC.FMP.APP.Blazor.RightContent />
    </RightContentRender>
    <ChildContent>
        @Body
    </ChildContent>
    <FooterRender>
        <FooterView Copyright="2022 XTC.FMP" Links="Links"></FooterView>
    </FooterRender>
</AntDesign.ProLayout.BasicLayout>
<SettingDrawer />

@code
{
    [Inject] public RuntimeScalingManager scalingMgr_ { get; set; }

    private MenuDataItem[] menuData_ = { };

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        if (!scalingMgr_.settings.Active)
        {
            menuData_ = await scalingMgr_.internalClient.GetFromJsonAsync<MenuDataItem[]>("data/menu.json");
        }
        else
        {
            List<MenuDataItem> menuDataItems = new List<MenuDataItem>();
            menuDataItems.Add(new MenuDataItem
                {
                    Path = "/",
                    Name = "welcome",
                    Key = "welcome",
                    Icon = "dashboard",
                });

            var repoModules = await scalingMgr_.FetchAgents();
            foreach (var module in repoModules)
            {
                MenuDataItem item = new MenuDataItem();
                item.Path = "";
                item.Name = string.Format("{0}.{1}", module.Org, module.Name);
                item.Key = string.Format("{0}.{1}", module.Org, module.Name).ToLower();
                item.Icon = "dashboard";
                int pagesCount = module.Pages?.Length ?? 0;
                item.Children = new MenuDataItem[pagesCount];
                for (int i = 0; i < pagesCount; i++)
                {
                    item.Children[i] = new MenuDataItem
                        {
                            Path = string.Format("/{0}/{1}/{2}", module.Org.ToLower(), module.Name.ToLower(), module.Pages[i].ToLower()),
                            Name = module.Pages[i],
                            Key = string.Format("/{0}/{1}/{2}", module.Org.ToLower(), module.Name.ToLower(), module.Pages[i].ToLower()),
                        };
                }
                menuDataItems.Add(item);
            }
            menuData_ = menuDataItems.ToArray();
        }
    }

